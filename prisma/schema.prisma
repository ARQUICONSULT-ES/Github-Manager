generator client {
  provider = "prisma-client"
  output   = "../app/generated/prisma"
}

datasource db {
  provider = "postgresql"
}

// Tabla principal: Tenants
model Tenant {
  id           Int           @id @default(autoincrement())
  customer     String        @db.VarChar(50)
  environments Environment[]

  @@map("tenants")
}

// Tabla relacionada: Environments
model Environment {
  tenantId   Int
  name       String      @db.VarChar(50)
  tenant     Tenant      @relation(fields: [tenantId], references: [id], onDelete: Cascade)
  extensions Extension[]

  @@id([tenantId, name])
  @@map("environments")
}

// Tabla relacionada: Extensions
model Extension {
  tenantId        Int
  environmentName String      @db.VarChar(50)
  id              String      @default(uuid())
  name            String      @db.VarChar(50)
  environment     Environment @relation(fields: [tenantId, environmentName], references: [tenantId, name], onDelete: Cascade)

  @@id([tenantId, environmentName, id])
  @@map("extensions")
}
