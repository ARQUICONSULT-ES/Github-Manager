generator client {
  provider = "prisma-client"
  output   = "../app/generated/prisma"
}

datasource db {
  provider = "postgresql"
}

// Tabla principal: Customers
model Customer {
  id           String   @id @default(dbgenerated("gen_random_uuid()")) @db.Uuid
  customerName String   @db.VarChar(50)
  tenants      Tenant[]

  @@map("customers")
}

// Tabla de Tenants
model Tenant {
  id              String        @id @db.Uuid
  customerId      String        @db.Uuid
  customer        Customer      @relation(fields: [customerId], references: [id], onDelete: Cascade)
  description     String?       @db.VarChar(500)
  createdAt       DateTime
  modifiedAt      DateTime
  // Campos de conexi√≥n
  connectionId    String?       @db.Uuid
  grantType       String?       @db.VarChar(100)
  clientId        String?       @db.Uuid
  clientSecret    String?       @db.Text
  scope           String?       @db.VarChar(200)
  token           String?       @db.Text
  tokenExpiresAt  DateTime?
  environments    Environment[]

  @@map("tenants")
}

// Tabla relacionada: Environments
model Environment {
  tenantId   String      @db.Uuid
  name       String      @db.VarChar(50)
  tenant     Tenant      @relation(fields: [tenantId], references: [id], onDelete: Cascade)
  extensions Extension[]

  @@id([tenantId, name])
  @@map("environments")
}

// Tabla relacionada: Extensions
model Extension {
  tenantId        String      @db.Uuid
  environmentName String      @db.VarChar(50)
  id              String      @db.Uuid
  name            String      @db.VarChar(50)
  version         String      @db.VarChar(50)
  publisher       String      @db.VarChar(50)
  publishedAs     String      @db.VarChar(20)
  environment     Environment @relation(fields: [tenantId, environmentName], references: [tenantId, name], onDelete: Cascade)

  @@id([tenantId, environmentName, id])
  @@map("extensions")
}
